<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="aplicacionmovil.BienvenidosTrabajadores"
             BackgroundImageSource="inicio.png">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="blue" CornerRadius="10" Margin="10">
                <Label Text="BIENVENIDOS TRABAJADORES"
                   TextColor="White"
                   HorizontalOptions="Center"
                       FontSize="18"/>
            </Frame>
            <Button 
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                Text="Ver Trabajadores"
                x:Name="ver"
                Clicked="ver_Clicked"
                BackgroundColor="Yellow"
                CornerRadius="15"
                BorderColor="Black"
                BorderWidth="2">

        </Button>
          </StackLayout>

    </ContentPage.Content>
</ContentPage>